@model ReefTankCore.Web.Areas.Admin.Models.Categories.CategoryOverviewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="panel panel-info top-buffer">
        <div class="panel-heading">
            <h2>List of categories</h2>
        </div>
        <div class="panel-body">
            <div class="row">
                @foreach (var category in Model.Categories)
                {
                    <div class="card">
                        <a href="@Url.Action("Index","Category", new { Area = "Admin", Id = category.Id})">
                            <img class="img-rounded img-responsive img-thumbnail" 
                                 src="~/images/Categories/@(category.Slug).svg"
                                 alt="@category.Name"/>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
