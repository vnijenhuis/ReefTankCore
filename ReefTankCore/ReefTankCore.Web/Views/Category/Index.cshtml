@model CategoryViewModel

@{
    ViewData["Title"] = "Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <div class="row">
                <div class="col-md-4">
                    <h1>@Model.Name</h1>
                </div>
            </div>
        </div>
        <div class="panel-body">
            <div class="row">
                @foreach (var m in Model.Subcategories)
                {
                    <div xlass="col-md-3">
                        @m.CommonName
                    </div>
                }
            </div>
        </div>
    </div>
</div>